{# templates/chat/chat.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Hello ChatController!{% endblock %}

{% block body %}

<div class="container">
    <h1>Users You Have Messaged</h1>
    <ul class="list-group">
        {% for username in usernames %}
            <li class="list-group-item">
                <a href="{{ path('chat_view', {'user': username}) }}">{{ username }}</a>
            </li>
        {% else %}
            <li class="list-group-item">You haven't sent messages to anyone yet.</li>
        {% endfor %}
    </ul>
    <hr>
    {{ form_start(form) }}
        <div class="row">
            <div class="col-2">{{ form_label(form.receiver) }}</div>
            <div class="col-2">{{ form_widget(form.receiver) }}</div>
        </div>
        <div class="row mt-2">
            <div class="col-2">{{ form_label(form.message) }}</div>
            <div class="col-2">{{ form_widget(form.message) }}</div>
        </div>
        <div class="row mt-2">
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>

{% endblock %}

